                  <Insets left="225.0" right="225.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="100.0" text="Password" textFill="#a7a7a7">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="225.0" top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="txtPassword" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Password" style="-fx-background-color: #606060;">
