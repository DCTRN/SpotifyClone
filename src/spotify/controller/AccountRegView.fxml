                  <Insets left="225.0" right="225.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goToLoginPage" prefHeight="50.0" prefWidth="180.0" text="Login Page" textAlignment="CENTER">
