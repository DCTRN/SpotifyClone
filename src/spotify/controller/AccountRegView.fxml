                  <Insets left="225.0" right="225.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="200.0" text="Repeat Password" textFill="#a7a7a7">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="225.0" top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Repeat the password" style="-fx-background-color: #606060;">
               <VBox.margin>
                  <Insets left="225.0" right="225.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="100.0" text="Email" textFill="#a7a7a7">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="225.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtEmail" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Email address" style="-fx-background-color: #606060;">
