                  <Insets left="225.0" right="225.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#insertAccount" prefHeight="50.0" prefWidth="150.0" text="Register" textAlignment="CENTER">
