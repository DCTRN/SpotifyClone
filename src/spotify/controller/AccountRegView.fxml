   <left>
      <VBox prefHeight="700.0" prefWidth="50.0" style="-fx-background-color: #4f4f4f;" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <VBox prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #424242;" BorderPane.alignment="CENTER">
         <children>
            <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="100.0" text="Login" textFill="#a7a7a7">
