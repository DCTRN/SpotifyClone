<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2d2d2d;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spotify.controller.AccountRegController">
   <top>
      <HBox prefHeight="50.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <HBox prefHeight="50.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
